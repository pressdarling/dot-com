---
import { Image } from 'astro:assets';

interface Props {
//  src: string;
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  sizes?: string;
  class?: string;
}

const { src, alt, width, height, sizes = '(max-width: 768px) 100vw, 768px', class: className } = Astro.props; 

// interface Props {
//   src: ImageMetadata;
//   alt: string;
//   widths: number[]; // note no height here
//   sizes: string;
//   class?: string;
// }

// const { src, alt, widths, sizes, class: className } = Astro.props;

---

<Image 
  src={src}
  alt={alt}
  width={width}
  height={height}
  sizes={sizes}
  loading="lazy"
  decoding="async"
  class={className}
/>