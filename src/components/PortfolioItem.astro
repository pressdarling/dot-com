---
import OptimisedImage from './OptimisedImage.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
}

const { title, description, imageSrc, imageAlt } = Astro.props;
---

<div class="portfolio-item">
  <OptimisedImage
    src={imageSrc}
    alt={imageAlt}
    width={768}
    height={432}
    class="w-full h-auto rounded-lg shadow-md"
  />
  <h2 class="text-xl font-bold mt-4">{title}</h2>
  <p class="mt-2">{description}</p>
</div>