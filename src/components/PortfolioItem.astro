---
import OptimisedImage from './OptimisedImage.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  description: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
}

const { title, description, imageSrc, imageAlt } = Astro.props;
---

<div class='portfolio-item'>
  <OptimisedImage
    src={imageSrc}
    alt={imageAlt}
    width={768}
    height={432}
    class='h-auto w-full rounded-lg shadow-md'
  />
  <h2 class='mt-4 text-xl font-bold'>{title}</h2>
  <p class='mt-2'>{description}</p>
</div>
