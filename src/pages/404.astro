---
import Layout from '../layouts/Layout.astro';

const errorInfo = {
  requestUrl: Astro.url.pathname,
// troubleshooting TODO
//  clientAddress: Astro.clientAddress ?? 'Not available in static mode',
// const headers = Astro.request.headers;`
// const referer = Astro.site ? headers.get('referer') : 'Not available in static mode';
  referer: Astro.request.headers.get('referer') || 'Not available',
  userAgent: Astro.request.headers.get('user-agent') || 'Not available',
};
---

<Layout 
  title="Page Not Found | Brady Clarke"
  description="The page you're looking for doesn't exist."
>
  <div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 text-white p-4">
    <div class="max-w-md w-full bg-white rounded-lg shadow-xl overflow-hidden">
      <div class="p-6 sm:p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Oh no!</h1>
        <p class="text-gray-600 mb-6">It looks like you've tried to go to a page that doesn't exist. I'm sorry.</p>
        <div class="bg-gray-100 rounded-lg p-4 mb-6">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Error Details</h2>
          <ul class="text-sm text-gray-600">
            {Object.entries(errorInfo).map(([key, value]) => (
              <li class="mb-1">
                <span class="font-medium">{key}:</span> {value}
              </li>
            ))}
          </ul>
        </div>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out flex-1 text-center">
            Go Home
          </a>
          <button onclick="window.history.back()" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded transition duration-300 ease-in-out flex-1">
            Go Back
          </button>
        </div>
      </div>
    </div>
    <p class="mt-8 text-sm text-white opacity-75">
      If this error persists, please <a href="mailto:brady@bradyclarke.com" class="underline hover:text-white">contact me</a>.
    </p>
  </div>
</Layout>
